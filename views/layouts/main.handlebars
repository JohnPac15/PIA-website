<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>PIA</title>
  </head>

  <body class="bg-light">
    <div class="wrapper">
      <header>
        <nav
          class="navbar navbar-expand-lg bg-secondary navbar-dark py-3 fixed-top"
        >
          <div class="container">
            <a href="/" class="navbar-brand">PIA</a>

            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navmenu"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navmenu">
              <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                  <a href="#features" class="nav-link">Features</a>
                </li>
                <li class="nav-item">
                  <a href="#about" class="nav-link">About Us</a>
                </li>
                <li class="nav-item">
                  <a href="#questions" class="nav-link">FAQs</a>
                </li>
                <li class="nav-item">
                  <a href="#team" class="nav-link">Our Team</a>
                </li>
                <li class="nav-item">
                  <a href="#contact" class="nav-link">Contact Us</a>
                </li>
                {{#if loggedIn}}
                  <li class="nav-item">
                    <a href="/dashboard" class="nav-link">Dashboard</a>
                  </li>
                  <li class="nav-item">
                    <a href="/logout" id="logout" class="nav-link">Logout</a>
                  </li>
                {{else}}
                  <li class="nav-item">
                    <a href="/login" class="nav-link">LogIn</a>
                  </li>
                {{/if}}
              </ul>
            </div>
          </div>
        </nav>
      </header>
      <main>
        {{{body}}}
      </main>
      <footer class="p-5 bg-secondary text-light position-relative">
        <div class="container">
          <p class="lead">Copyright &copy; 2022 PIA</p>
          <a href="#" class="position-absolute top-0 end-0 p-5">
            <i class="bi bi-arrow-up-circle h1 text-warning"></i>
          </a>
        </div>
        
      </footer>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
      {{#if loggedIn}}
      src="/javascript/logout.js"></script>
      {{/if}}
    ></script>
  </body>

</html>
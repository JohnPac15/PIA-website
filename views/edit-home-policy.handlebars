<section class="p-5 min-vh-100">
    <div class="container mt-3 pt-5">
        <div class="row ">
            <div class="col-12 col-sm-8 col-md-6 m-auto">
                <div class="card border-0 shadow bg-white">
                    <div class="card-body">
                        <div class="h1 text-center">
                            <i class="bi bi-people"></i> <span class="h3">Update Homeowner Policy Information</span>
                        </div>
                        <form class="update-homeowner-form">                 
                          Policy ID:<input type="text" name="" id="id-homewoner-update" class="form-control my-1 py-1" value={{user.id}}>
                          Address: <input type="text" name="" id="address-homewoner-update" class="form-control my-1 py-1"  value="{{user.property_address}}">                  
                          Company:<input type="text" name="" id="company-homewoner-update" class="form-control my-1 py-1"  value="{{user.company_name}}">        
                          Premium:<input type="number" name="" id="premium-homewoner-update" class="form-control my-1 py-1" value={{user.annual_premium}}>
                          Policy #:<input type="number" name="" id="policy-homewoner-update" class="form-control my-1 py-1"  value={{user.policy_number}}>
                          Exp Date:<input type="text" name="" id="exp-date-homewoner-update" class="form-control my-1 py-1"  value={{user.expiration_date}}>
                          <div>
                            <div class ="d-flex align-items-center justify-content-center">
                              <a href="/admin"><button type="button" class="btn btn-primary m-2 p-2">Return</button></a>
                              <button type="button" class="btn btn-warning my-1 py-1">Save changes</button>
                            </div>
                          </div>
                        </form>
                    </div>
                    <form class="delete-policy d-flex align-items-top justify-content-center">
                      <button type="button" class="delete-btn btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
</section>
<script src="/javascript/homepolicy.js"></script>
